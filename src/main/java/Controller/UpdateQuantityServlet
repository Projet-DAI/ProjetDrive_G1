package Controller;

import java.io.IOException;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import Model.DAO.PanierDAO;
import Model.metier.LignePanier;

@WebServlet("/UpdateQuantityServlet")
public class UpdateQuantityServlet extends HttpServlet {
    private static final long serialVersionUID = 1L;

    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        // 获取产品ID和新数量
        String productId = request.getParameter("productId");
        int newQuantity = Integer.parseInt(request.getParameter("quantity"));

        // 更新购物车中相应产品的数量
        PanierDAO panierDAO = new PanierDAO();
        int panierId = 1; // 或者从 session 中获取购物车 ID
        LignePanier lignePanier = panierDAO.getLignePanierByProductId(panierId, productId);

        if (lignePanier != null) {
            lignePanier.setQuantite(newQuantity);
            panierDAO.updateLignePanier(lignePanier); 
            response.getWriter().write("Success");
        } else {
            response.getWriter().write("Product not found in the cart");
        }
    }
}
